- if posts.length > 0
  - for post in posts
    .stream_element{ :data => { :guid => post.id } }
      .sm_body
        %a{ :herf => "/" }
          - if not post.user.avatar.blank?
            = image_tag( post.user.avatar.thumb.url, :class => "avatar" )
          - else
            = image_tag( 'avatar_default.gif', :class => "avatar" )
        - case post._type
          - when "Recipe"
            = render 'shared/recipe',
              :post => post
          - when "Shared"
            = render 'shared/shared',
              :post => post